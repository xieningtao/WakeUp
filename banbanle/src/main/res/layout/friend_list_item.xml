<?xml version="1.0" encoding="utf-8"?>
<com.basesmartframe.baseadapter.checkableadapter.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.basesmartframe.bitmap.rounddrawable.RoundedImageView
        android:id="@+id/photo_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_frame"
        android:padding="2dp"
        android:scaleType="center"
        android:src="@drawable/app_icon"
        app:riv_corner_radius="25dp" />

    <TextView
        android:id="@+id/nickName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/photo_iv"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/photo_iv" />

    <TextView
        android:id="@+id/userName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/photo_iv"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/photo_iv" />
</com.basesmartframe.baseadapter.checkableadapter.CheckableRelativeLayout>