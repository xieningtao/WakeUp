<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ny_main_bg">

    <ImageView
        android:id="@+id/app_icon_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/app_icon" />


    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/app_icon_iv"
        android:background="@color/lb_grey" />

    <LinearLayout
        android:id="@+id/version_code_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/divider1"
        android:background="@drawable/rectangle_click_bk"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            style="@style/label_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="版本号" />

        <TextView
            android:id="@+id/version_code_tv"
            style="@style/edit_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="v1.0.0 buiding 1000" />
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/version_code_ll"
        android:background="@color/lb_grey" />

    <LinearLayout
        android:id="@+id/version_email_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/divider2"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle_click_bk"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            style="@style/label_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="服务邮箱" />

        <TextView
            style="@style/edit_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="389124248@qq.com" />
    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/version_email_ll"
        android:background="@color/lb_grey" />

    <LinearLayout
        android:id="@+id/check_version_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/divider3"
        android:background="@drawable/rectangle_click_bk"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">


        <TextView
            style="@style/label_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="检查更新" />

        <TextView
            style="@style/edit_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="1.0.0" />
    </LinearLayout>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/check_version_ll"
        android:background="@color/lb_grey" />
</RelativeLayout>